apiVersion: v1
kind: Service
metadata:
  name: {{ DEPLOYMENT_NAME }}-web
  namespace: {{ NAMESPACE }}
  labels:
    name: {{ DEPLOYMENT_NAME }}-web
spec:
  type: NodePort
  ports:
    - port: 80
      targetPort: 80
      name: {{ DEPLOYMENT_NAME }}-80
  selector:
    name: {{ DEPLOYMENT_NAME }}-slider
---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: {{ DEPLOYMENT_NAME }}-ingress
  namespace: {{ NAMESPACE }}
  annotations:
    kubernetes.io/ingress.global-static-ip-name: "{{ DEPLOYMENT_NAME }}-ip"
spec:
  backend:
    serviceName: {{ DEPLOYMENT_NAME }}-web
    servicePort: {{ DEPLOYMENT_NAME }}-80

